<div id="divCategories">

</div>


<h2>Kategoriler</h2>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" onClick="NewCategory()">
    Yeni Kategori Ekle
</button>


<div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Kategori Bilgileri</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <label for="inputCategoryName" class="form-label">Kategori Adı: </label>
                <input type="text" id="inputCategoryName" class="form-control">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" onclick="SaveCategories()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin/category.js" asp-append-version="true"></script>